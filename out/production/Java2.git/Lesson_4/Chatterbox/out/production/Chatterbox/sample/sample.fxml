<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/style?>

<VBox alignment="center" prefWidth="481.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <TextArea fx:id="chat" editable="false" focusTraversable="false" style="-fx-control-inner-background: #666666;" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="inputString" minWidth="100" onAction="#onActionInputString" promptText="Write your message" style="-fx-control-inner-background: #b3b3b3;" HBox.hgrow="ALWAYS" />
        <Button fx:id="sendButton" minWidth="100" onMouseReleased="#onMouseReleasedSendButton" text="Send" />
    </HBox>
</VBox>
